<% layout("/layouts/boilerplate") %>
<style>


    .payment-container {
        background: rgba(255, 255, 255, 0.95);
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
        text-align: center;
        margin: 80px auto;
        animation: fadeInUp 0.7s ease-out;
    }

  
    h2 {
        color: #333;
        font-size: 26px;
        font-weight: 700;
        margin-bottom: 20px;
    }

  
    .input-group {
        margin-bottom: 20px;
        text-align: left;
    }


    .input-group label {
        font-weight: bold;
        display: block;
        margin-bottom: 8px;
        color: #444;
    }

  
    .input-group select, .input-group input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 16px;
        transition: 0.3s ease;
    }


    .input-group select:focus, .input-group input:focus {
        border-color: #28a745;
        outline: none;
        box-shadow: 0px 0px 10px rgba(40, 167, 69, 0.5);
    }

    .btn {
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #28a745, #218838); /* Gradient button */
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 18px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0px 4px 10px rgba(40, 167, 69, 0.4);
    }

 
    .btn:hover {
        background: linear-gradient(135deg, #218838, #1e7e34);
        box-shadow: 0px 6px 14px rgba(40, 167, 69, 0.6);
        transform: scale(1.05); 
    }


    .btn:active {
        transform: scale(0.98); 
        box-shadow: 0px 4px 10px rgba(40, 167, 69, 0.4);
    }

    
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

</style>

<div class="payment-container">
    <h2>Payment Details</h2>
    <p><strong>Total Amount:</strong> ₹<%= booking.totalAmount.toLocaleString("en-IN") %></p>  <!-- ✅ Amount Show -->
    
    <form action="/bookings/<%= booking._id %>/process-payment" method="post">
        <div class="input-group">
            <label for="payment-method">Select Payment Method</label>
            <select id="payment-method" name="paymentMethod">
                <option value="card">Credit/Debit Card</option>
                <option value="upi">UPI</option>
                <option value="paypal">PayPal</option>
            </select>
        </div>

        <button type="submit" class="btn">Pay Now</button>
    </form>
</div>

