<% layout("/layouts/boilerplate") %>

<style>

.confirmation-container {
    background: rgba(255, 255, 255, 0.9);
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.15);
    max-width: 480px;
    width: 100%;
    text-align: center;
    margin: 80px auto;
    animation: fadeInUp 0.6s ease-out;
}


@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Heading style */
h2 {
    font-size: 28px;
    color: #28a745;
    margin-bottom: 25px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
}


.details {
    margin-top: 20px;
    text-align: left;
    font-size: 18px;
    color: #555;
    line-height: 1.6;
}

.details p {
    margin: 12px 0;
}


.btn {
    width: 100%;
    padding: 14px;
    background: #007bff;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 20px;
    font-weight: 600;
    transition: all 0.3s ease;
    margin-top: 30px;
    box-shadow: 0px 4px 15px rgba(0, 123, 255, 0.3);
}


.btn:hover {
    background: #0056b3;
    box-shadow: 0px 6px 18px rgba(0, 123, 255, 0.5);
    transform: translateY(-3px);
}


.btn:active {
    transform: translateY(1px);
    box-shadow: 0px 2px 8px rgba(0, 123, 255, 0.4);
}

.confirmation-container {
    box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.2);
}


.details {
    background: rgba(245, 245, 245, 0.6);
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
}
</style>

<div class="confirmation-container">
    <h2>Booking Confirmed!</h2>
    <p>Thank you for your payment. Your booking is now confirmed.</p>

    <div class="details">
        <p><strong>Hotel/Resort:</strong> <%= booking.stay %></p>
        <p><strong>Room Type:</strong> <%= booking.room %></p>
        <p><strong>Check-in:</strong> <%= new Date(booking.checkin).toDateString() %></p>
        <p><strong>Check-out:</strong> <%= new Date(booking.checkout).toDateString() %></p>
        <p><strong>Total Amount Paid:</strong> â‚¹<%= booking.totalAmount.toLocaleString("en-IN") %></p>
    </div>

    <button class="btn" onclick="window.location.href='/'">Go to Home</button>
</div>
