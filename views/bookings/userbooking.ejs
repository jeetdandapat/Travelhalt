<%- layout("layouts/boilerplate") %>

<style>
    /* Main Content Styling */
    .main-content {
        padding: 40px;
        margin: 0 auto;
        max-width: 1200px;
    }

    
    .profile-card {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%); /* Gradient background */
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        margin-bottom: 40px;
        display: flex;
        align-items: center; 
        justify-content: flex-start;
        border: 1px solid #ddd;
        transition: all 0.3s ease;
        color: white; 
    }

    .profile-card:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        transform: translateY(-5px);
    }

    /* Profile Image Style (First letter) */
    .profile-card .profile {
        width: 120px;
        height: 120px;
        background: #fff;
        color: #3498db;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 50px;
        margin-right: 30px;
        font-weight: bold;
        border: 4px solid #fff;
    }

    .profile-card h3 {
        margin: 10px 0;
        font-size: 24px;
        font-weight: 700;
        color: #fff; 
    }

    .profile-card p {
        margin: 5px 0;
        color: #f1f1f1; 
        font-size: 16px;
    }

    /* Booking Card Styling */
    .booking-card {
        background: #fff;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border: 1px solid #ddd;
        transition: all 0.3s ease;
    }

    .booking-card:hover {
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        transform: translateY(-5px);
    }

    /* Image Styling */
    .booking-card img {
        width: 160px;
        height: 100px;
        border-radius: 10px;
        object-fit: cover;
        margin-right: 20px;
    }

    .booking-card-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        flex-grow: 1;
    }

    .booking-card h3 {
        margin: 0;
        font-size: 20px;
        font-weight: 700;
        color: #333;
    }

    .booking-card p {
        margin: 5px 0;
        font-size: 14px;
        color: #666;
    }

    .booking-card p span {
        font-weight: bold;
        color: #333;
    }

    /* Border Box for elements */
    .border-box {
        border: 2px solid #3498db;
        padding: 20px;
        border-radius: 10px;
        background: #f9f9f9;
        margin-bottom: 30px;
    }

    /* Responsive Design */
    @media screen and (max-width: 768px) {
        .main-content {
            padding: 20px;
        }

        .profile-card {
            margin-top: 20px;
            flex-direction: column;
            text-align: center;
        }

        .booking-card {
            flex-direction: column;
            align-items: flex-start;
        }

        .booking-card img {
            width: 100%;
            height: 200px;
            margin-right: 0;
            margin-bottom: 15px;
        }
    }
</style>


<div class="main-content">
    <!-- User Profile Section -->
    <div class="profile-card">
        <div class="profile">
            <%= user.username.charAt(0).toUpperCase() %> <!-- Display first letter of username -->
        </div>
        <div>
            <h3><%= user.username %> 
            <p>Email: <%= user.email %></p>
        </div>
    </div>

    <!-- Border Box for Section Highlight -->
    <div class="border-box">
        <h2>My Bookings</h2>
        <% if (bookings.length === 0) { %>
            <p>No bookings found.</p>
        <% } else { %>
            <% bookings.forEach(booking => { %>
                <div class="booking-card">
                 
                    <img src="<%= booking.listing.image.url %>" alt="Hotel Image">
                    <div class="booking-card-content">
                        <h3><%= booking.listing.title %></h3>
                        <p><span>Location:</span> <%= booking.listing.location %></p>
                        <p><span>Check-in:</span> <%= booking.checkin.toLocaleDateString() %> | <span>Check-out:</span> <%= booking.checkout.toLocaleDateString() %></p>
                        
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>
</div>
