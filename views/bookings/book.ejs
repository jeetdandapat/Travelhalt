<% layout("/layouts/boilerplate") %>
<style>
    /* Background and Container */
    .booking-container {
        background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.1);
        max-width: 480px;
        width: 100%;
        text-align: center;
        margin: 80px auto 20px auto;
        animation: fadeIn 0.7s ease-in-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Header Style */
    h2 {
        font-size: 28px;
        color: #333;
        margin-bottom: 20px;
        font-weight: 700;
        letter-spacing: 1px;
    }

    /* Input Groups */
    .input-group {
        margin-bottom: 25px;
        text-align: left;
    }

    .input-group label {
        font-weight: 600;
        display: block;
        margin-bottom: 10px;
        color: #333;
    }

    /* Input Fields and Selects */
    .input-group input,
    .input-group select {
        width: 100%;
        padding: 15px;
        border: 2px solid #ddd;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 500;
        transition: all 0.3s ease;
        background-color: #fff;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.05);
    }

    .input-group input:focus,
    .input-group select:focus {
        border-color: #4CAF50;
        outline: none;
        box-shadow: 0px 0px 12px rgba(76, 175, 80, 0.5);
    }

    /* Button Styles */
    .btn {
        width: 100%;
        padding: 16px;
        background: linear-gradient(135deg, #28a745, #218838);
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 18px;
        font-weight: bold;
        transition: all 0.3s ease;
        letter-spacing: 1px;
    }

    .btn:hover {
        background: #1e7e34;
        box-shadow: 0px 4px 12px rgba(40, 167, 69, 0.6);
        transform: translateY(-2px);
    }

    .btn:active {
        transform: translateY(2px);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .booking-container {
            padding: 25px;
        }

        h2 {
            font-size: 24px;
        }

        .input-group input,
        .input-group select {
            padding: 14px;
            font-size: 15px;
        }

        .btn {
            font-size: 16px;
        }
    }

</style>

<div class="booking-container">
    <h2>Book <%= listing.title %></h2>
    <form action="/listings/<%= listing._id %>/book" method="post">  

        <input type="hidden" name="listingId" value="<%= listing._id %>">
        
        <div class="input-group">
            <label for="checkin">Check-in Date</label>
            <input type="date" id="checkin" name="checkin" required>
        </div>
        <div class="input-group">
            <label for="checkout">Check-out Date</label>
            <input type="date" id="checkout" name="checkout" required>
        </div>
        <div class="input-group">
            <label for="stay">Stay Type</label>
            <select id="stay" name="stay">
                <option value="hotel">Hotel</option>
                <option value="resort">Resort</option>
            </select>
        </div>
        <div class="input-group">
            <label for="room">Room Type</label>
            <select id="room" name="room">
                <option value="single">Single Room</option>
                <option value="double">Double Room</option>
                <option value="suite">Suite</option>
                <option value="villa">Villa (Resort Only)</option>
            </select>
        </div>
        <button type="submit" class="btn">Book Now</button>
    </form>
</div>
